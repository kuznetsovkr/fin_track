<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8F0F5"
    tools:context=".registration_activity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#69DCC0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/montserrat_bold"
                android:text="Регистрация"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/free_icon_online_registration_3200751" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat"
                android:text="Пожалуйста, заполните поля"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="302dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Введите ваше имя"
                android:paddingLeft="5dp"
                android:inputType="textPersonName"
                 />
            <EditText
                android:id="@+id/editTextTextPersonName1"
                android:layout_width="302dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Ввведите вашу фамилию"
                android:paddingLeft="5dp"
                android:inputType="textPersonName"
                />

            <EditText
                android:id="@+id/editTextTextEmailAddress3"
                android:layout_width="302dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:ems="4"
                android:fontFamily="@font/montserrat"
                android:hint="Введите email"
                android:paddingLeft="5dp"
                android:inputType="textEmailAddress" />
            <EditText
                android:id="@+id/editTextTextPassword3"
                android:layout_width="302dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Введите пароль"
                android:paddingLeft="5dp"
                android:inputType="textPassword" />
            <EditText
                android:id="@+id/editTextTextPassword4"
                android:layout_width="302dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Подтвердите пароль"
                android:paddingLeft="5dp"
                android:inputType="textPassword" />



            <TextView
                android:id="@+id/textView3"
                android:layout_width="302dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape1"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="Зарегистрироваться"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />



        </LinearLayout>



</RelativeLayout>