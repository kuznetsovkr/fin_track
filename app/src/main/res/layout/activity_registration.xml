<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8F0F5"
    tools:context=".registration_activity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#69DCC0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/montserrat_bold"
                android:text="Регистрация"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/img_button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="-6dp"
                android:background="@null"
                android:minWidth="48dp"
                android:minHeight="48dp"
                app:srcCompat="@drawable/back_small"
                tools:ignore="SpeakableTextPresentCheck" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/free_icon_online_registration_3200751" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat"
                android:text="Пожалуйста, заполните поля"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editTextTextPersonFirstName"
                android:layout_width="302dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Введите ваше имя"
                android:paddingLeft="5dp"
                android:inputType="textPersonName"
                 />
            <EditText
                android:id="@+id/editTextTextPersonSecondName"
                android:layout_width="302dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Ввведите вашу фамилию"
                android:paddingLeft="5dp"
                android:inputType="textPersonName"
                />

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="302dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:ems="4"
                android:fontFamily="@font/montserrat"
                android:hint="Введите email"
                android:paddingLeft="5dp"
                android:inputType="textEmailAddress" />
            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="302dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Введите пароль"
                android:paddingLeft="5dp"
                android:inputType="textPassword" />
            <EditText
                android:id="@+id/editTextTextConfirmPassword"
                android:layout_width="302dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Подтвердите пароль"
                android:paddingLeft="5dp"
                android:inputType="textPassword" />


            <Button
                android:id="@+id/button_register"
                android:layout_width="302dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="#58F8AB"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:letterSpacing="0.05"
                android:text="Зарегистрироваться"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />



        </LinearLayout>



</RelativeLayout>